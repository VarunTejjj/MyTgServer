USERS_META = "users.json"

def load_users():
    if os.path.exists(USERS_META):
        try:
            with open(USERS_META, "r") as f:
                return json.load(f)
        except:
            return []
    return []

def save_users(data):
    with open(USERS_META, "w") as f:
        json.dump(data, f, indent=2)

users = load_users()

def add_user(uid):
    if uid not in users:
        users.append(uid)
        save_users(users)